mixin main-menu(custom_class)
	nav(class='main-menu ' + custom_class)
		ul.main-menu__site-nav
			li.main-menu__site-nav_active.main-menu__item
				a(href="index.html") Главная
			li.main-menu__site-nav.main-menu__item
				a(href="catalog.html") Каталог тестов
			li.main-menu__site-nav.main-menu__item
				a(href="instruction.html") Инструкция
			li.main-menu__site-nav.main-menu__item
				a(href="cheat_sheet.html") Формулы
			li.main-menu__site-nav.main-menu__item
				a(href="quiz.html") Тест

mixin main-logo(custom_class)
	a(class='main-logo ' + custom_class href="index.html")
		picture
			img(src="img/svg/logo.svg" alt="Логотип LearningTestingProject Тесты по физике")

header.page-header
	.container.page-header__wrapper
		+main-logo('page-header__logo')
		+main-menu('page-header__menu')

